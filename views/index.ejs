<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes Vault App</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-zinc-900 min-h-screen text-white">

    <!-- HEADER -->
    <header class="text-center py-8 border-b border-zinc-800">
        <h1 class="text-4xl font-bold tracking-tight">üìù Notes Vault</h1>
        <p class="text-zinc-400 mt-2">Capture your thoughts. Read them anytime.</p>
    </header>

    <!-- MAIN CONTENT -->
    <main class="max-w-6xl mx-auto px-6 py-10 grid grid-cols-1 md:grid-cols-3 gap-8">

        <!-- FORM SECTION -->
        <section class="md:col-span-1 bg-zinc-800/60 backdrop-blur rounded-xl p-6 shadow-lg">
            <h2 class="text-2xl font-semibold mb-4">Create a Note</h2>

            <form action="/create" method="post" class="space-y-4">
                <input type="text" name="title" placeholder="Title..."
                    class="w-full px-4 py-2 bg-zinc-900 rounded-md outline-none focus:ring-2 focus:ring-green-600"
                    required>

                <textarea name="details" placeholder="Write your note..." rows="6"
                    class="w-full px-4 py-2 bg-zinc-900 rounded-md resize-none outline-none focus:ring-2 focus:ring-green-600"
                    required></textarea>

                <button type="submit"
                    class="w-full bg-green-700 hover:bg-green-600 transition py-2 rounded-md font-medium">
                    ‚ûï Create Note
                </button>
            </form>
        </section>

        <!-- NOTES SECTION -->
        <section class="md:col-span-2">
            <h2 class="text-2xl font-semibold mb-6">Your Notes</h2>

            <% if (files.length> 0) { %>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
                    <% files.forEach(function(val){ %>
                        <div
                            class="bg-zinc-800 rounded-xl p-5 shadow-md hover:shadow-xl transition hover:-translate-y-1">
                            <h3 class="text-xl font-semibold truncate">
                                <%= val.replace('.txt','') %>
                            </h3>

                            <a href="/file/<%= val %>" class="inline-block mt-4 mb-2 text-green-400 hover:underline">
                                Read more ‚Üí
                            </a>
                            <div class="options flex justify-between">
                                <form action="/edit/<%= val %>" method="post">
                                    <button type="submit"
                                        class="text-blue-400 hover:text-blue-700 text-sm inline-block">
                                        Edit
                                    </button>

                                </form>
                                <form action="/delete/<%= val %>" method="post">
                                    <button type="submit"
                                        onclick="return confirm('Are you sure you want to delete this note?')"
                                        class="text-red-400 hover:text-blue-700 text-sm ">
                                        ‚ùå
                                    </button>

                                </form>


                            </div>

                        </div>
                        <% }) %>
                </div>
                <% } else { %>
                    <p class="text-zinc-400">No notes added yet.</p>
                    <% } %>
        </section>

    </main>

</body>

</html>